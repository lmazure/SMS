{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020"
        ],
        "outDir": "./build-doc-gen",
        "rootDir": "./src-doc-gen",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src-doc-gen/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "build-doc-gen"
    ]
}